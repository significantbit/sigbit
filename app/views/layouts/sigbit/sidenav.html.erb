<%= render layout: "layouts/sigbit/base" do %>
  <%= render partial: "layouts/sigbit/side_menu" %>
  <div class="main-content">
    <%= render partial: 'layouts/sigbit/dashboard_top_nav' %>
    <% if content_for?(:description) || content_for(:actions) %>
      <div class="scaffold page-header d-flex align-items-center mb-1 pt-3 pb-3">
        <div class='container-fluid'>
          <div class="row align-items-center">
            <div class="col-12 col-md-6">
              <% if content_for?(:description) %>
                <h2 class='m-0 tracking-tighter'><%= @title %></h2>
                <%= yield :description %>
              <% end %>
            </div>
            <div class="col-12 col-md-6">
              <% if content_for?(:actions) %>
                <%= yield :actions %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- /.page-header -->
    <% end %>
    <div class="container-fluid pt-2">
      <%= render "layouts/sigbit/flashes" %>
      <%= yield %>
    </div>
  </div>
<% end %>
