%div
  %header.pl-2.pr-2.pt-4.pb-4.d-flex.align-items-center
    = fa_icon_tag("#{header.contentable_icon} fa-3x")
    %div.ml-3.mr-auto
      %h3.m-0= header.menu_title
      %p.m-0
        %small
          URL:
          = link_to "#{request.protocol}#{request.domain}#{":#{request.port}" if request.port}/#{I18n.locale}#{header.url}", header.url, target: '_blank', class: 'p-1'
    %div
      %span.border.border-dark.p-1.rounded
        %small.m-0.p-0
          = fa_icon_tag(header.contentable_icon)
          = header.contentable.class

